{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },

      "lib": ["es6", "es2015", "es2017", "dom"],
      "types": ["reflect-metadata", "node", "jasmine"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "server/**/*",
      "shared/**/*",
      "sandbox/*",
        "spec/**/*"
    ]
}
